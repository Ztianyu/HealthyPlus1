<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorGray"
            android:gravity="center"
            android:text="服务预定"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="服务对象："
                android:textColor="@color/colorTextColor"
                android:textSize="16sp" />

            <GridView
                android:id="@+id/gridViewOldMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:numColumns="4"
                android:scrollbars="none"></GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="服务时长："
                android:textColor="@color/colorTextColor"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupOrderDoctor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="32dp"
                android:paddingRight="32dp">

                <RadioButton
                    android:id="@+id/radioButtonOrder1"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="一个月" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radioButtonOrder2"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="三个月" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroupOrderDoctor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="32dp"
                android:paddingRight="32dp">

                <RadioButton
                    android:id="@+id/radioButtonOrder3"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="半年" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radioButtonOrder4"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="一年" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务开始时间："
                    android:textColor="@color/colorTextColor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editOrderDoctor"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:background="@drawable/edit_shape"
                    android:drawableRight="@mipmap/ic_gradient_black_24dp"
                    android:paddingRight="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textOrderPrise"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:background="#e70000"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="合计：1500元" />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>