<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4decf"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textDeviceOwn"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorBottomSelect"
            android:gravity="center"
            android:text="爸爸"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="血糖仪设备号：" />

                <EditText
                    android:id="@+id/editSugarNum"
                    style="@style/MyEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="血压仪设备号：" />

                <EditText
                    android:id="@+id/editPressureNum"
                    style="@style/MyEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="跌倒报警设备号：" />

                <EditText
                    android:id="@+id/editWarningNum"
                    style="@style/MyEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="电子定位设备号：" />

                <EditText
                    android:id="@+id/editLocationNum"
                    style="@style/MyEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnSaveDevice"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@mipmap/btn_advice"
            android:text="保 存"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:textColor="@color/colorBtn"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
