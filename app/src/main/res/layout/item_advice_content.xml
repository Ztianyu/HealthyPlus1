<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4decf"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方案日期："
                android:textColor="@color/colorBlack1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textAdviceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08-30"
                android:textColor="@color/colorBlack2"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textAdviceIsNew"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_advice_new"
                    android:gravity="center"
                    android:text="新"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textAdviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐福："
                android:textColor="@color/colorBlack2" />

            <TextView
                android:id="@+id/textAdvicePosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主治医师"
                android:textColor="@color/colorBlack2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题："
                android:textColor="@color/colorBlack1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textAdviceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="糖尿病处理方案"
                android:textColor="@color/colorBlack2"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <TextView
                android:id="@+id/btnAdviceMore"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:background="@mipmap/ic_advice_more"
                android:gravity="center"
                android:text="详情"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容："
                android:textColor="@color/colorBlack1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/editAdviceContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_shape"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="5"
                android:padding="4dp"
                android:scrollbars="vertical"
                android:text="糖尿病是一组以高血糖为特征的代谢性疾病。高血糖则是由于胰岛素分泌缺陷或其生物作用受损，或两者兼有引起。糖尿病时长期存在的高血糖，导致各种组织，特别是眼、肾、心脏、血管、神经的慢性损害、功能障碍。"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
