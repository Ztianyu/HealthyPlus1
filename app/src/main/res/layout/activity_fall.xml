<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dlFall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.home.FallWarningActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragmentFall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

        <RadioGroup
            android:id="@+id/radioGroupFall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainMenuHeight"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonFall1"
                style="@style/MyRadioButton"
                android:checked="true"
                android:text="跌倒位置" />

            <RadioButton
                android:id="@+id/radioButtonFall2"
                style="@style/MyRadioButton"
                android:text="历史记录" />

            <RadioButton
                android:id="@+id/radioButtonFall3"
                style="@style/MyRadioButton"
                android:text="设备信息" />
        </RadioGroup>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewAccountFall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/colorBackground"
        android:divider="@color/colorDivider"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollbars="none"></ListView>


</android.support.v4.widget.DrawerLayout>


