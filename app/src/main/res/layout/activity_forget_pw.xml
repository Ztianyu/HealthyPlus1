<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_line"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/resetPwWidth"
                android:layout_height="@dimen/personItemHeight"
                android:gravity="center"
                android:text="手机号码" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/personItemHeight"
                android:layout_margin="0.5dp"
                android:background="@color/colorDivider"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editForgetPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personItemHeight"
                android:background="@null"
                android:hint=""
                android:inputType="phone"
                android:minWidth="96dp"
                android:paddingLeft="8dp" />

            <TextView />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_line"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/resetPwWidth"
                android:layout_height="@dimen/personItemHeight"
                android:gravity="center"
                android:text="验证码" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/personItemHeight"
                android:layout_gravity="center"
                android:layout_margin="0.5dp"
                android:background="@color/colorDivider"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editForgetCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personItemHeight"
                android:background="@null"
                android:hint=""
                android:inputType="textPassword"
                android:minWidth="96dp"
                android:paddingLeft="8dp" />

            <Button
                android:id="@+id/btnForgetGetCode"
                android:layout_width="96dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_login"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnForgetStep1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personItemHeight"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_login"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>